(defwidget network [] (
  box :class "network"
      :tooltip wifiName
  (label :text {
      strength == ""? "ïª©":
      strength < 26 ? "ïª¨":
      strength < 51 ? "ïª¨":
      strength < 70 ? "ïª¨": "ïª¨"
    }
  )
))

( defpoll wifiName
  :interval "20s"
  :initial `N/A`
  `nmcli | grep '^wlp' | sed 's/\ connected\ to\ /Connected to /g' | cut -d ':' -f2`
)

( defpoll strength
  :interval "10s"
  :initial `N/A`
  `nmcli -t -f SIGNAL,ACTIVE device wifi | awk -F':' '{if($2=="yes")print$1}'`
)

